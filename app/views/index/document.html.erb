<div align="center">
  <div align="left"><%= link_to('Regresar', index_home_path) %></div>
  <p>Nombre del Documento <%= @doc.name %></p>

  <%= form_tag(index_document_path, method: :post) do %>
      <div class="d-flex flex-row justify-content-center">
        <div class="p-1"><%= select(@params, :chapter_id, @doc.chapters.collect { |p| [p.name, p.id] }, :selected => @h_params.first) %></div>
        <div class="p-1"> <%= submit_tag('Cargar Secciones', :class => ' btn-info btn-xs') %></div>
      </div>
  <% end %>
  <%= form_tag(index_document_path, method: :post) do %>
      <div class="d-flex flex-row justify-content-center ">
        <div class="p-1"> <%= select(@params, :section_id, @sections.collect { |p| [p.name, p.id] }, :selected => @h_params.second) %></div>
        <%= hidden_field_tag('hidden', @h_params) %>
        <div class="p-1"> <%= submit_tag('Cargar Subsecciones', :class => ' btn-info btn-xs') %></div>
      </div>
  <% end %>
  <%= form_tag(index_document_path, method: :post) do %>
      <div class="d-flex flex-row justify-content-center">
        <div class="p-1">  <%= select(@params, :subsection_id, @subsections.collect { |p| [p.name, p.id] }, :selected => @h_params[2]) %></div>
        <%= hidden_field_tag('hidden', @h_params) %>
        <div class="p-1">  <%= submit_tag('Cargar Parrafos', :class => ' btn-info btn-xs') %></div>
      </div>
  <% end %>

  <% unless params[:subsection_id].nil? %>
      <% @contents.each do |ct| %>
          <% if ct.oftype != 'table' %>
              <%= "#{ct.code.gsub('\n', '<br>')}".html_safe if ct.oftype == 'text' %>
              <%= image_tag(ct.code, alt: ct.extra, data: {title: ct.title}) if ct.oftype == 'image' %>
              <br>

              <%= button_to new_interaction_path(ct: ct.id, bw: current_user.id), {class: 'btn btn-default btn-lg'} do %>
                  <span class="glyphicon glyphicon-pencil"></span>
              <% end %>

              <%= button_to interactions_path(ct: ct.id, bw: current_user.id), {class: 'btn btn-default btn-lg', method: :get} do %>
                  <span class="glyphicon glyphicon-list"></span>
              <% end %>


          <% else %>

              <%= "#{ct.code.gsub('<table>', "<table class = 'resp3-table'>")}".html_safe if ct.oftype == 'table' %>

              <tr>
                <td>
                  <button type="submit" class="btn btn-default btn-lg">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </button>
                  <button type="button" class="btn btn-default btn-lg">
                    <span class="glyphicon glyphicon-list"></span>
                  </button>
                </td>
          <% end %>
          </div>
          <br>
      <% end %>
  <% end %>

