  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>
<div align="left"> <%= link_to 'Regresar', index_document_path %></div>
<h1>Comentarios</h1>
<div class="container-fluid2">
  <div align="center">
    <table class='resp4-table'>

      <tr>
        <th>Asociaci√≥n</th>
        <th>Usuario</th>
        <th>Tipo</th>
        <th>Comentario</th>
        <th>Contenido</th>
        <th>Acciones</th>
      </tr>


      <tbody>
      <% @interactions.each do |interaction| %>
          <tr>
            <% u = User.find(interaction.by_who) %>
            <% p = Content.find(interaction.content_id) %>
            <td><%= u.society %></td>
            <td><%= u.first_name %></td>
            <td><%= interaction.oftype %></td>
            <td><%= interaction.msg %></td>
            <td><%= p.unique_id %></td>
            <td>
              <%= link_to 'Edit', edit_interaction_path(interaction) %>
              <% if current_user.privileges.first.level == 'root' %>
                  <%= link_to 'Destroy', interaction, method: :delete, data: {confirm: 'Are you sure?'} %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>

